{% macro sponsor_icon(sponsor, size, level) %}
<div class="sponsor ; p-0.5 sm:p-2 {{ size }}">
  <a href="{{ sponsor.url }}" title="{{level}} Sponsor: {{ sponsor.name }}" class="; block" target="{{'_blank' if r/^https?:/.test(sponsor.url) else '_self'}}">
    <img src="{{ sponsor.image }}" alt="{{level}} Sponsor: {{ sponsor.name }}" class="; block w-full shadow-md rounded-lg hover:ring-2 hover:ring-200ok-orange" />
  </a>
</div>
{% endmacro %}

{% macro sponsor_section(level, size) %}
<div>
  <h3 class="; text-center">{{ level }} {{ 'Sponsor' if sponsors[level].length === 1 else 'Sponsors' }}</h3>
  <div class="; flex flex-wrap justify-center">
    {% for sponsor in sponsors[level] %}
    {{ sponsor_icon(sponsor, size, level) }}
    {% endfor %}
  </div>
</div>
{% endmacro %}

